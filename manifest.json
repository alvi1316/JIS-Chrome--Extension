{
  "name": "Job Index",
  "icons": {
   "16": "./icons/Job Description Scraper 16.png",
   "32": "./icons/Job Description Scraper 32.png",
   "48": "./icons/Job Description Scraper 48.png",
   "128": "./icons/Job Description Scraper 128.png"
 },
  "description": "A scraper for job index logs",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "./index/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/collections/*", 
        "https://www.linkedin.com/jobs/search/*"
      ],
      "js": ["linkedin-scrapper-1.js"]
    },
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*"
      ],
      "js": ["linkedin-scrapper-2.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}
